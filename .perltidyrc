# I/O control

--quiet

# basic options

--indent-columns=4
--maximum-line-length=72
#--variable-maximum-line-length
#--whitespace-cycle=4
--converge

# code indentation control

--line-up-parentheses

# whitespace control

--nospace-for-semicolon
-want-left-space="+ - "
-want-right-space="+ - "
--nowant-left-space="* /"
--nowant-right-space="* /"
--trim-pod

# comment control

--no-outdent-long-comments
--closing-side-comments
--closing-side-comment-interval=25
--closing-side-comments-balanced
--closing-side-comment-else-flag=1

# line break control

--nocuddled-else
--opening-sub-brace-on-new-line
--opening-token-right
--vertical-tightness=2
--vertical-tightness-closing=2
--nostack-opening-tokens
--nostack-closing-tokens
--break-after-all-operators

# blank line control

--no-blanks-before-comments
--blank-lines-before-subs=1
--long-block-line-count=4
